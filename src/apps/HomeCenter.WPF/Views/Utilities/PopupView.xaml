<Window x:Class="HomeCenter.NET.Views.Utilities.PopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HomeCenter.NET PopupView" 
        MinHeight="80" 
        MinWidth="300"
        Topmost="True" 
        ShowInTaskbar="False" 
        ResizeMode="NoResize" 
        WindowStyle="None"
        Opacity="0.8" 
        AllowsTransparency="True" 
        Background="{StaticResource MainBackgroundBrush}"
        SizeToContent="WidthAndHeight"
        ShowActivated="False"
        SizeChanged="OnSizeChanged"
        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay}">
    <Label Margin="5" x:Name="Text" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource MainForegroundBrush}"/>
</Window>
