<Window x:Class="HomeCenter.NET.Windows.RectangleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCenter.NET.Windows"
        mc:Ignorable="d"
        Title="RectangleWindow" 
        Height="450" Width="800" 
        Background="Transparent"
        ShowInTaskbar="False" 
        Topmost="True" 
        ResizeMode="NoResize" 
        ShowActivated="False" 
        WindowStyle="None" 
        AllowsTransparency="True">
    <Border BorderThickness="2" BorderBrush="CornflowerBlue" Background="Transparent"/>
</Window>
