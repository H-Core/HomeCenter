<Window x:Class="HomeCenter.NET.Views.RenameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rename"  
        Width="400"
        Height="120">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Old Name:"/>
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="OldName" Grid.ColumnSpan="2"/>
        <Label Grid.Row="1" Grid.Column="0" Content="New Name:"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="NewName" Grid.ColumnSpan="2"/>
        <Button Grid.Row="3" Grid.Column="0" x:Name="Save" Content="Save" Grid.ColumnSpan="2"/>
        <Button Grid.Row="3" Grid.Column="2" x:Name="Cancel" Content="Cancel"/>
    </Grid>
</Window>
